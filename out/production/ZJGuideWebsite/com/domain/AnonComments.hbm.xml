<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.domain.AnonComments" table="anon_comments">
        <id name="counter">
            <generator class="identity"/>
        </id>
        <property name="anonID"/>
        <property name="sourceUid"/>
        <property name="sourceUname"/>
        <property name="destUid"/>
        <property name="destUname"/>
        <property name="commentText"/>
        <property name="commentTime"/>
        <property name="commentOrReply"/>
    </class>
</hibernate-mapping>